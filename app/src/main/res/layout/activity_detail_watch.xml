<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ui.detail_watch.DetailWatchActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <RelativeLayout
        android:id="@+id/rv_t"
        android:layout_below="@id/videoView"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:id="@+id/txtTitle"
            android:text="A Creator Celebration - Tulus X Erwin Gutawa "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:id="@+id/txtLive"
            android:text="Live"
            android:background="@drawable/bg_accent"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<View
    android:id="@+id/view"
    android:layout_below="@id/rv_t"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorGrey"/>

    <TextView
        android:layout_below="@id/view"
        android:layout_margin="16dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/txtDetail"
        android:text="@string/lorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:padding="10dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_edt_send"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_send"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>