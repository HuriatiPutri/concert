<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transaksi.PembayaranActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:minHeight="?attr/actionBarSize">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/AppTheme">
                <ImageView
                    android:id="@+id/back"
                    android:onClick="back"
                    android:src="@drawable/ic_chevron_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/colorBlack"
                    android:textAlignment="center"
                    android:text="Pembayaran"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
<LinearLayout
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/bg_edt_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/imgEvent"
                android:src="@drawable/medium"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/txtTitle"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:text="@string/a_concert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtDate"
                android:paddingLeft="10dp"
                android:text="07 Nov 2020 - 07 Nov 2020"
                android:drawableStart="@drawable/ic_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtTime"
                android:paddingLeft="10dp"
                android:text="20:00 - 22:00 WIB"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tiket1"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:text="2 Tiket Early Bid"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/marchandise"
                android:paddingLeft="10dp"
                android:textSize="11dp"
                android:layout_alignParentRight="true"
                android:text="Rp. 100.000"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:text="1 Marchandise T-Shirt"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="10dp"
                android:textSize="11dp"
                android:layout_alignParentRight="true"
                android:text="Rp. 150.000"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="10dp"
                android:text="Alamat Pengiriman Marchandise"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="10dp"
                android:textSize="11dp"
                android:layout_alignParentRight="true"
                android:text="Ubah Alamat"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:paddingLeft="18dp"
            android:textColor="@color/colorBlack"
            android:text="Padang, Kuranji\nJln. Ampang Karang gantiang no.29"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:text="Metode pembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/rv1"
            android:background="@drawable/bg_edt_send"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/tf"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/rv1"
            android:background="@drawable/bg_edt_send"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/cc"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                android:text="Credit/Debit Card"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/bg_edt_send"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Fitur Reply"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Dengan menggunakan fitur reply konser live yang telah  anda tonotn bisa diputar ulang sepuasnya"
            android:textColor="@color/colorBlack"
            android:textSize="11sp"
            android:drawableLeft="@drawable/ic_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="21dp"
            android:textStyle="bold"
            android:text="Gunakan Fitur"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <android.support.v7.widget.SwitchCompat
                android:outlineAmbientShadowColor="@color/colorGreen"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="21dp"
            android:textSize="10sp"
            android:text="menggunakan fitur ini dikenakan biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="21dp"
            android:textSize="10sp"
            android:layout_gravity="end"
            android:textColor="@color/colordarkPink"
            android:text="Rp. 100.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:text="Rincian Harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/bg_edt_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="10dp"
                android:text="2 Tiket Early Bid"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="10dp"
                android:textSize="11dp"
                android:layout_alignParentRight="true"
                android:text="Rp. 100.000"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="5dp"
                android:text="1 Marchandise T-Shirt"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="10dp"
                android:textSize="11dp"
                android:layout_alignParentRight="true"
                android:text="Rp. 150.000"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout> <View
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="10dp"
                android:text="Fitur reply"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="10dp"
                android:textSize="11dp"
                android:layout_alignParentRight="true"
                android:text="Rp. 100.000"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="10dp"
                android:text="Harga Total"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="10dp"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:text="Rp. 350.000"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/colorWhite"
        android:text="Proses Pembayaran"
        android:onClick="proses"
        android:background="@drawable/bg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
    </LinearLayout>
</ScrollView>